<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1B6A9C" />
                    <size android:width="122dp" android:height="44dp" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
            <item android:width="30dp" android:height="30dp" android:drawable="@drawable/ic_sun_light" android:gravity="center_vertical" android:left="10dp" />
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#A9DCFD" />
                    <size android:width="122dp" android:height="44dp" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
            <item android:width="30dp" android:height="30dp" android:drawable="@drawable/ic_moon_dark" android:gravity="center_vertical|right" android:right="10dp" />
        </layer-list>
    </item>
</selector>